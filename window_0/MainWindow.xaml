<Window x:Class="window_0.MainWindow"
        xmlns:l="clr-namespace:window_0"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="これがウィンドウです！" Height="350" Width="525"
        Loaded="WindowLoaded"
        Closing="WindowClosing"
        MinWidth="500">
    <StackPanel>
        <l:MyUserControl />
        <l:MyUserControl />
        <Button Click="NewWindowClicked">新しいウィンドウを作成</Button>

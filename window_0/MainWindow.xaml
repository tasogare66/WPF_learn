        <Button Click="ShowOwner">ShowOwner</Button>
        <Button Click="ShowMethod">Show</Button>
        <Button Click="UseVisibilityProperty">Visibility = Visible</Button>
        <Button Click="ShowDialogMethod">ShowDialog</Button>
    </StackPanel>

</Window>
